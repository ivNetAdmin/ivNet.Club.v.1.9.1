<div class="col-md-12 group">
    
    <div class="col-md-6">
        <h3>Fixtures</h3>
        <table class="table table-striped list-table">
            <tr ng-repeat="fixture in fixtures" ng-click="selectFixture()">
                <td>{{fixture.DatePlayed | date:'dd-MMM-yyyy'}}</td>   
                <td>{{fixture.Opposition}}</td>                                       
            </tr>
        </table>
    </div>
    
 </div>